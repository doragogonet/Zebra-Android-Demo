<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="0dp" >

    <TextView
        android:id="@+id/TvFilterItemId"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/TvFilterNumber"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/TvFilterData"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/TvFilterMemoryBank"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="228dp" />

    <TextView
        android:id="@+id/TvFilterOffset"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/TvFilterLength"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/TvFilterAction"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/TvFilterTarget"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/TvFilterDelete"
        android:layout_width="239dp"
        android:layout_height="150dp"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="272dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

